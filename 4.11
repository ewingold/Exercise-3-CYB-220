# Original list from 4.1
favorite_pizzas = ["5 Meat", "Pepperoni", "Hawiian"]

# Making a copy of the list
friend_pizzas = favorite_pizzas[:]

# Adding a new pizza to the original list
favorite_pizzas.append("Old World Pepperoni")

# Adding a different pizza to the list friend_pizzas
friend_pizzas.append("Stuffed Crust")

# Printing "My favorite pizzas are:" and the first list using a for loop
print("My favorite pizzas are:")
for pizza in favorite_pizzas:
    print(pizza)

# Printing "My friend's favorite pizzas are:" and the second list using a for loop
print("\nMy friend's favorite pizzas are:")
for pizza in friend_pizzas:
    print(pizza)


